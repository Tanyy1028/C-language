//1. WAP to create/simulate telecom call service conversation scenario using nested switch case.

#include <stdio.h>

int main() {
    int choice, subChoice;

    printf("Welcome to Telecom Service\n");
    printf("Press 1 for English\n");
    printf("Press 2 for Hindi\n");
    scanf("%d", &choice);

    switch (choice) {
        case 1:
            printf("\nEnglish Menu\n");
            printf("Press 1 for Internet Issues\n");
            printf("Press 2 for Call Issues\n");
            scanf("%d", &subChoice);

            switch (subChoice) {
                case 1:
                    printf("You selected Internet Issues\n");
                    break;
                case 2:
                    printf("You selected Call Issues\n");
                    break;
                default:
                    printf("Invalid Choice\n");
            }
            break;

        case 2:
            printf("\nHindi Menu\n");
            printf("Internet samasya ke liye 1 dabaye\n");
            printf("Call samasya ke liye 2 dabaye\n");
            scanf("%d", &subChoice);

            switch (subChoice) {
                case 1:
                    printf("Aapne Internet samasya chuni hai\n");
                    break;
                case 2:
                    printf("Aapne Call samasya chuni hai\n");
                    break;
                default:
                    printf("Galat choice\n");
            }
            break;

        default:
            printf("Invalid Language Choice\n");
    }

    return 0;
}

