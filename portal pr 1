//  Q.2 Gross Salary Calculator

#include<stdio.h>
#include<conio.h>
void main()
{
	int salary,hra,da,ta;
	printf("enter salary = ");
	scanf("%d",&salary);
	printf("enter HRA = ");
	scanf("%d",&hra);
	printf("enter DA = ");
	scanf("%d",&da);
	printf("enter TA = ");
	scanf("%d",&ta);
	
	int HRA=(salary*hra)/100;
	int DA=(salary*da)/100;
	int TA=(salary*ta)/100;
	
	int gross_salary=salary+HRA+DA+TA;
	
	printf("gross salary = %d",gross_salary);
}

-------------------------------------------------------------------------------------

// Q.3 Triangle Angle Finder

#include<stdio.h>
#include<conio.h>
void main()
{
	int a,b,c;
	printf("enter first angle = ");
	scanf("%d",&a);
	printf("enter second angle = ");
	scanf("%d",&b);
	c=180-(a+b);
	printf("third angle is %d",c);
}

